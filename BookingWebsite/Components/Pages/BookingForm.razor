@page "/BookNow"

<div class="container">
    <h1>Booking Form</h1>
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" @bind="Name" />
    </div>
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" @bind="Email" />
    </div>
    <div class="form-group">
        <label for="date">Date:</label>
        <input type="date" class="form-control" id="date" @bind="Date" />
    </div>
    <button class="btn btn-primary" @onclick="SubmitBooking">Submit</button>
</div>

@code {
    private string Name { get; set; }
    private string Email { get; set; }
    private DateTime Date { get; set; }

    private void SubmitBooking()
    {
        // TODO: Implement booking submission logic
        Console.WriteLine($"Booking submitted for {Name} ({Email}) on {Date}");
    }
}